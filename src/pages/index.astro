---
import Layout from '../layouts/Layout.astro';
import Logo from '../components/Logo.astro';
import ProjectList from '../components/ProjectList.astro';
import SocialMediaLinks from '../components/SocialMediaLinks.astro';
import Footer from '../components/Footer.astro';
import Fediring from '../components/Fediring.astro';
---

<Layout title="detta.dev" description="Home of Punished Bernadetta">
    <div class="homepage">
        <header>
            <Logo />
            <h1>Detta.dev</h1>
            <p>Full-stack developer, modder</p>
            <SocialMediaLinks />
        </header>
        <main>
            <ProjectList />
            <p>...and more!</p>
        </main>
        <Footer>
            <Fediring />
            <div>
                <img
                    src="/badges/no-ai.gif"
                    alt="No generative AI was used. Made with real fox paws."
                />
            </div>
        </Footer>
    </div>
</Layout>

<style>
    .homepage {
        display: flex;
        justify-content: center;
        flex-direction: column;
        text-align: center;
    }
    header {
        h1 {
            font-size: 3rem;
            margin: 0;
        }

        p {
            font-size: 1rem;
            margin-bottom: 24px;
            margin-top: 0;
        }
        margin-bottom: 1em;
    }
</style>
