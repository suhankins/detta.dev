---
import GithubPath from './GithubPath.astro';

interface Props {
    type: 'github';
    url: string;
    size?: number;
}

const { url, size } = Astro.props;
const iconSize = `${size ?? 32}px`;
---

<a href={url} target="_blank" rel="noopener" aria-label="Project on GitHub">
    <svg
        width={iconSize}
        height={iconSize}
        viewBox="0 0 98 96"
        xmlns="http://www.w3.org/2000/svg"
        aria-hidden="true"
    >
        <defs>
            <linearGradient id="gradient" x2="0" y2="1">
                <stop offset="0%" stop-color="var(--text-color)"></stop>
                <stop offset="100%" stop-color="var(--tag-background-1)"></stop>
            </linearGradient>
        </defs>
        <GithubPath />
    </svg>
</a>

<style>
    a {
        margin-left: auto;
        position: relative;
        width: 32px;
        bottom: 6px;
        text-decoration: none;
    }
    a svg {
        fill: #fff;
    }
    a:is(:hover, a:active, a:focus) svg {
        fill: url(#gradient);
    }
</style>
