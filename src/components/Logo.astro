<script>
    const logo = document.querySelector('[data-logo]');
    const animatingElements = document.querySelectorAll(
        '[data-animatable-logo]'
    );

    if (animatingElements.length > 0 && logo) {
        const pointerenterCallback = () => {
            animatingElements.forEach((animatingElement) =>
                animatingElement.classList.add('shake')
            );
            logo.removeEventListener('pointerenter', pointerenterCallback);
        };

        animatingElements.forEach((animatingElement) =>
            animatingElement.addEventListener('animationend', () => {
                animatingElement.classList.remove('shake');
                logo.addEventListener('pointerenter', pointerenterCallback);
            })
        );
    }
</script>

