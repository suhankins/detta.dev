---
interface Props {
    tags: string[];
}

const { tags } = Astro.props;
---
<div>
    <div class="accordion">
        <ul>
            {tags.toSpliced(0, 1).map((tag) => (
                <li class="tag">{tag}</li>
            ))}
        </ul>
    </div>
    <div class="tag">{tags[0]}</button>
</div>

<style>
    div {
        z-index: 3;
        position: relative;
        display: inline-block;
    }
    div:not(:hover) .accordion {
        grid-template-rows: 0fr;
    }
    .tag {
        background-color: var(--tag-background-1);
        display: inline;
        padding: 2px 8px 2px 20px;
        border-radius: 99999999px;
        position: relative;
        white-space: nowrap;
        text-shadow: 0px 0px 5px #000;
        color: var(--text-color);
        border: none;
        font-size: 16px;
    }
    .tag:before {
        content: "‚óè";
        position: absolute;
        left: 6px;
        top: 0;
    }
    .accordion {
        position: absolute;
        bottom: calc(1em + 3px);
        grid-template-rows: 1fr;
        transition: 250ms grid-template-rows ease;
        display: grid;
        overflow: hidden;
        margin: auto 0 5px 0;
    }
    ul {
        padding: 0;
        display: grid;
        gap: 2px;
        margin-bottom: 2px;
        overflow: hidden;
    }
</style>