---
import Footer from '../components/Footer.astro';
import Layout from './Layout.astro';

const { frontmatter } = Astro.props;
---

<Layout
    title={`${frontmatter.title} | detta.dev`}
    description={frontmatter.description}
>
    <div class="blog-container">
        <div class="controls">
            <a href="/blog">&larr; Back to post archive</a>
            <label>
                Enable bigger font
                <input name="Enable bigger font" type="checkbox" />
            </label>
        </div>
        {
            frontmatter.released ? (
                <>
                    <header>
                        <h1 class="blog-title">{frontmatter.title}</h1>
                        <p class="publish-date">
                            Published:{' '}
                            <time datetime={frontmatter.pubDate}>
                                {new Date(
                                    frontmatter.pubDate
                                ).toLocaleDateString('uk')}
                            </time>
                        </p>
                        <p class="description">
                            <i>{frontmatter.description}</i>
                        </p>
                        <ul class="tags">
                            {frontmatter.tags.map((tag: string) => (
                                <li class="tag">{tag}</li>
                            ))}
                        </ul>
                        <hr />
                    </header>
                    <main>
                        <slot />
                    </main>
                    <hr />
                    <a href="/blog">&larr; Back to post archive</a>
                </>
            ) : (
                <h1>This article isn't ready yet!</h1>
            )
        }
        <Footer />
    </div>
</Layout>

<style is:inline>
    .blog-container:has(input:checked) {
        font-size: 1.2em;
    }
    .blog-container {
        label {
            margin-left: auto;
        }
        .blog-title {
            text-align: center;
            margin-top: 1em;
            margin-bottom: 1em;
        }
        h1,
        h2,
        h3,
        h4,
        h5,
        h6 {
            a {
                color: inherit;
                margin-right: 0.5ch;
            }
        }
        h1[id="contents"] + ol {
            background-color: var(--background-2);
            width: max-content;
            padding: 20px 40px 20px 40px;
            border-radius: 20px;

            & ol {
                padding-top: 0.5em;
                padding-left: 2ch;
                li::marker {
                    content: "";
                }
            }
        }
        .controls {
            display: flex;
        }
        h1 {
            margin-top: 0.5em;
        }
        p:has(img) {
            text-align: center;
        }
        img {
            max-width: 100%;
            height: auto;
        }
        .publish-date,
        .description {
            text-indent: inherit;
        }
        p {
            text-indent: 0.5em;
        }
        figure {
            margin: 2em 0 2em 0;
        }
        figcaption {
            font-style: italic;
            width: 100%;
            display: block;
            text-align: center;
            font-size: 0.9em;
            color: var(--footnote-color);
        }
        video {
            width: 100%;
        }
        .tags {
            padding: 0;
            margin-top: 2em;
            margin-bottom: 1em;
        }
        .tag {
            margin-right: 1ch;
        }
        li {
            margin-bottom: 0.5em;
        }
        main {
            line-height: 1.4;
        }
        hr {
            border-bottom-color: var(--footnote-color);
            margin-top: 2em;
            margin-bottom: 2em;
        }
    }
</style>
